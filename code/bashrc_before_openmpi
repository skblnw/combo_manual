#for Intel
source /share/apps/intel/bin/compilervars.sh intel64
#GNU compiler
export PATH=/share/apps/intel/bin:$PATH
export INCLUDE=/share/apps/intel/include:$PATH
export LD_LIBRARY_PATH=/share/apps/intel:$PATH
export CC=gcc
export CFLAGS=-O3
export CXX=g++
export CXXFLAGS=-O3
export FC=gfortran
export F77=gfortran
export F90=gfortran
export FFLAGS=-O3